<section class="preview-box preview-box--projects">
  <h2 class="preview-heading">Latest Project</h2>
  {% set latestProject = collections.projects | first %}
  {% if latestProject %}
  <div class="preview-content">
    <h3><a href="{{ latestProject.url }}">{{ latestProject.data.title }}</a></h3>
    <p>{{ latestProject.data.description }}</p>
    <a class="preview-link" href="/projects/">See all projects â†’</a>
  </div>
  {% else %}
  <p>No projects found.</p>
  {% endif %}
</section>